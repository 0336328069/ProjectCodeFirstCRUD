@model UpdateProductsViewModel

<form method="post" enctype="multipart/form-data" style="margin-left: 150px; width: 70% ;" asp-controller="Products" asp-action="Update">

    <div class="form-group">
        <label for="ImageProduct">Product's Image</label>
        <input class="form-control" asp-for="Image">
    </div>
    <div class="form-group">
        <label for="UploadImage">Upload Image</label>
        <input class="form-control" asp-for="UploadImage">
        <span asp-validation-for="UploadImage"></span>
    </div>
    <div class="form-group">
        <label for="NameOfProduct">Product's Name</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input class="form-control" asp-for="Price">
    </div>
    <div class="form-group">
        <label for="Category">Category</label>
        <input class="form-control" asp-for="CategoryId">
    </div>
    <button class="btn btn-primary" type="submit">Update</button>
</form>
