
@model StaffViewModel

<body>
    <header>
        <div class="container">
            <div class="container">

                <div class="row">

                    <div class="col-lg-3">
                        <div class="user--profile-left" style="padding: 20px;">
                            <li class="list-group-item"><a href="#" class="text-decoration-none text-dark ">Infomation</a></li>
                            <li class="list-group-item"><a href="#" class="text-decoration-none text-dark ">Change Your User Name</a></li>
                            <li class="list-group-item"><a href="#" class="text-decoration-none text-dark ">Change Password</a></li>
                            <li class="list-group-item"><a href="#" class="text-decoration-none text-dark ">Team Management</a></li>
                            <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">Contact</a></li>
                        </div>
                    </div>
                    <div class="col-lg-9 d-flex">
                        <form>
                            <div class="form-group d-flex" >
                                <label for="ID" hidden>ID</label>
                                <input class="form-control"  asp-for="Id" hidden>
                            </div>
                            <div class="form-group d-flex">
                                <label for="Name">Name</label>
                                <input class="form-control"  asp-for="Name">
                            </div>
                            <div class="form-group d-flex">
                                <label for="Age">Age</label>
                                <input class="form-control"  asp-for="Age">
                            </div>
                            <div class="form-group d-flex">
                                <label for="Email">Email</label>
                                <input class="form-control"   asp-for="Email">
                            </div>
                            <div class="form-group d-flex">
                                <label for="BirthDay">BirthDay</label>
                                <input class="form-control" asp-for="Birthday">
                            </div>
                            <div class="form-group d-flex">
                                <label for="Address">Address</label>
                                <input class="form-control" asp-for="Address">
                            </div>
                            <div class="form-group d-flex" style="float: right;">
                                <button type="submit" class="btn btn-primary mx-3"  asp-action="Update" asp-controller="Staff">Save</button>
                                <button type="submit" class="btn btn-secondary">Cancel</button>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
    </header>
</body>
